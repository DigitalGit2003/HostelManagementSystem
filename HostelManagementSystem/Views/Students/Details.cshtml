@{

}

<h1>Details of Student's Room</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.roomNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.roomNo)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.capacity)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students)
        </dt>
        
        <dd class="col-sm-10">
            @try
            {
                foreach (var student in Model.Students!)
                {
                    <hr />
                    @Html.Partial("RoomMates", student)
                    <hr />
                }
            }
            catch (Exception e)
            {
                <h1>Error :(</h1>
            }
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vacancy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vacancy)
        </dd>
    </dl>
</div>

