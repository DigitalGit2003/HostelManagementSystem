@{

}

<h1>Details of Student's Room</h1>

<div>
    <hr />
    <dl class="row">
    <div class="col-3">

        <dt class="">
            @Html.DisplayNameFor(model => model.roomNo)
        </dt>
        <dd class="">
            @Html.DisplayFor(model => model.roomNo)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.capacity)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vacancy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vacancy)
        </dd>

    </div>
        
    <div class ="col-9">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students)
        </dt>


        <hr />
        <br />
        <dd class="flex d-inline-flex col-sm-10">
            @try
            {
               
                foreach (var student in Model.Students!)
                {
                    @Html.Partial("RoomMates", student)
                }
            }
            catch (Exception e)
            {
                <h1>Error :(</h1>
            }
        </dd>
    </div>

    </dl>
</div>

