<h1>Details of Student's Room</h1>

<div>
    <hr />
    <div class="row text-capitalize">
        <div class="col-3 table-responsive">
    
            <table class="table">
                <tbody>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.roomNo)</th>
                        <td> @Html.DisplayFor(model => model.roomNo)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.type)</th>
                        <td>@Html.DisplayFor(model => model.type)</td>
                    </tr>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.capacity)</th>
                        <td> @Html.DisplayFor(model => model.capacity)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.vacancy)</th>
                        <td>@Html.DisplayFor(model => model.vacancy)</td>
                    </tr>
                </tbody>
            </table>

        </div>

        <div class="col-9">

        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students)
        </div>


        <hr />
        <br />
            <div class="">
            @try
            {
               
                foreach (var student in Model.Students!)
                {
                    @Html.Partial("RoomMates", student)

                }
            }
            catch (Exception e)
            {
                <h1>Error :(</h1>
            }

            </div>
    </div>

    </div>
